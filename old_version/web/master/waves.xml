<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../ph.xsl"?>

<master-page>
  <title>Waves</title>
  <multi-form item="Wave" id="waves" action="getWaves">
    <input type="long-text" id="name" name="Name">
      The name of the wave
    </input>
    <input type="datetime" id="time" name="Release">
      When the wave will occur. (If you get a date-selector, use
      it. If instead you get a regular text box, use the format
      yyyy-mm-dd --:--:--)
    </input>
    <input type="number" id="guesses" name="Guesses">
      How many guesses to provide to all teams when the wave occurs
    </input>
    <submit-button action="setWaves">
      Update
    </submit-button>
  </multi-form>
</master-page>
