<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../ph.xsl"?>

<master-page>
  <title>Hunt Info</title>
  <form action="getHunt">
    <input type="text" id="name">
      Name of the hunt
    </input>
    <input type="number" id="teamSize">
      Maximum team size
    </input>
    <input type="number" id="initGuesses">
      How many guesses each team starts with
    </input>
    <input type="boolean" id="closed">
      Whether the hunt has been closed (freezes team stats)
    </input>
    <submit-button action="setHunt">
      Update
    </submit-button>
  </form>
</master-page>
