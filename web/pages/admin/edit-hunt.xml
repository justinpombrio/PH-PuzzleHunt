<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/ph.xsl"?>

<page page-type="admin">
  <hunt key="{{hunt.key}}">{{hunt.name}}</hunt>
  <title>Edit Hunt</title>
  <form>
    <section>
      <input type="fixed" id="key" value="{{hunt.key}}">
        Hunt key
      </input>
      <input type="text" id="name" value="{{hunt.name}}">
        Hunt name
      </input>
      <input type="number" id="teamSize" value="{{hunt.teamSize}}">
        Maximum team size
      </input>
      <input type="number" id="initGuesses" value="{{hunt.initGuesses}}">
        Initial Guesses
      </input>
      <input type="boolean" id="closed" value="true">
        Closed
      </input>
      <input type="boolean" id="visible" value="false">
        Visible
      </input>
    </section>
    <submit-button>
      Update
    </submit-button>
  </form>
</page>
