<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/ph.xsl"?>

<page page-type="puzzler" error="{{error}}">
  <hunt key="{{hunt.key}}">{{hunt.name}}</hunt>
  <title>Answer Submitted: {{puzzle.name}}</title>
  <form>
    <prose>
      <p>The answer <b>{{guess.guess}}</b> for {{puzzle.name}} is <b>INCORRECT</b>.</p>
      <p>You have {{team.guesses}} guesses left.</p>
    </prose>
    <section>
      <input type="long" id="guess">
        Answer
      </input>
    </section>
    <submit-button>
      Submit Answer
    </submit-button>
  </form>
</page>
