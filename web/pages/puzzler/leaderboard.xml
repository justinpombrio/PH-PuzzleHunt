<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/ph.xsl"?>

<page page-type="puzzler" error="{{error}}">
  <hunt key="{{hunt.key}}">{{hunt.name}}</hunt>
  <title>Leaderboard</title>
  <prose>
    <table>
      <tr>
        <th>Team</th>
        <th>Guesses</th>
        <th>Avg. Solve Time</th>
      </tr>
      {{#stats}}
      <tr>
        <td>{{team}}</td>
        <td>{{guesses}}</td>
        <td>{{avg_solve_time}}</td>
      </tr>
      {{/stats}}
    </table>
  </prose>
</page>
