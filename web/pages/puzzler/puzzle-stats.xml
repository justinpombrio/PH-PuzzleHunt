<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/ph.xsl"?>

<page>
  <hunt key="{{hunt.key}}">{{hunt.name}}</hunt>
  <title>Puzzle Stats</title>
  <prose>
    <table>
      <tr>
        <th>Wave</th>
        <th>Puzzle</th>
        <th>Guesses</th>
        <th>Solves</th>
        <th>Avg. Solve Time</th>
      </tr>
      {{#stats}}
      <tr>
        <td>{{wave}}</td>
        <td><a href="puzzle/{{key}}">{{name}}</a></td>
        <td>{{guesses}}</td>
        <td>{{solves}}</td>
        <td>{{avgSolveTime}}</td>
      </tr>
      {{/stats}}
    </table>
  </prose>
</page>
