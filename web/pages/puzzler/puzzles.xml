<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/ph.xsl"?>

<page>
  <hunt key="{{hunt.key}}">{{hunt.name}}</hunt>
  <title>Puzzles</title>
  <prose>
    {{#waves}}
      <p>
        <h3>{{name}}:</h3>
        <ul class="puzzle-list">
          {{#puzzles}}
          <li>
            <a href="/{{hunt.key}}/puzzle/{{key}}.xml">{{name}}</a>
            <span class="spacing"/>
            <a href="/{{hunt.key}}/answer/{{key}}.xml">[answer]</a>
            {{#hints}}
              <span class="spacing"/>
              <a href="/{{hunt.key}}/hint/{{key}}.xml">[hint {{number}}]</a>
            {{/hints}}
          </li>
          {{/puzzles}}
        </ul>
      </p>
    {{/waves}}
  </prose>
</page>
