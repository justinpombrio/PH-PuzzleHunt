<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../ph.xsl"?>

<master-page>
  <title>Hints</title>
  <multi-form item="Hint" id="hints" action="getHints">
    <input type="short-text" id="number" name="Num">
      Number of the hint
    </input>
    <input type="short-text" id="puzzle" name="Puzzle">
      Id of the puzzle this hint is for
    </input>
    <input type="short-text" id="penalty" name="Pts">
      How many points the hint subtracts from puzzles once its released
    </input>
    <input type="long-text" id="wave" name="Wave">
      What wave the hint is part of
    </input>
    <input type="generated" id="key" name="Filename">
      The hints's filename (autogenerated)
    </input>
    <submit-button action="setHints">
      Update
    </submit-button>
  </multi-form>
</master-page>
