<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../ph.xsl"?>

<master-page>
  <title>Puzzles</title>
  <multi-form item="Puzzle" id="puzzles" action="getPuzzles">
    <input type="long-text" id="name" name="Name">
      Name of the puzzle
    </input>
    <input type="short-text" id="number" name="Num">
      Number of the puzzle (e.g. 2, or 1.2)
    </input>
    <input type="short-text" id="points" name="Pts">
      How many points the puzzle is worth
    </input>
    <input type="short-text" id="wave" name="Wave">
      The id of the wave the puzzle is part of
    </input>
    <input type="long-text" id="answer" name="Answer">
      The answer to the puzzle (normalized automatically)
    </input>
    <input type="generated" id="key" name="Filename">
      The puzzle's filename (autogenerated)
    </input>
    <submit-button action="setPuzzles">
      Update
    </submit-button>
  </multi-form>
</master-page>
